@page
@model Application.Pages.User.Register

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            background: linear-gradient(135deg, #dbeafe, #93c5fd);
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .register-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background: white;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .register-container h2 {
            margin-bottom: 20px;
            font-weight: 600;
            color: var(--bs-primary);
        }
        .register-container .form-control {
            width: 100%;
            height: 50px;
            padding: 12px 20px;
            border-radius: 30px;
            border: 1px solid var(--bs-primary);
        }
        .btn-register {
            background: var(--bs-primary);
            color: #7bcfe1;
            border-radius: 30px;
            padding: 12px;
            width: 100%;
            transition: 0.3s;
            font-weight: 500;
        }
        .btn-register:hover {
            background: #15B9D9FF;
        }
        .login-link a {
            text-decoration: none;
            color: var(--bs-primary);
            font-weight: 500;
        }
        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="register-container">
    <h2>Register</h2>
    <form method="post" asp-page-handler="Register">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Full Name" asp-for="RegisterViewModel.FullName" required>
        </div>
        <div class="mb-3">
            <input type="email" class="form-control" placeholder="Email" asp-for="RegisterViewModel.Email" required>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Phone Number" asp-for="RegisterViewModel.PhoneNumber" required>
        </div>
        <div class="mb-3">
            <select class="form-control" asp-for="RegisterViewModel.RoleId" required>
                <option value="">Select Your Role</option>
                <option value="2">Patient</option>
                <option value="3">Medical Expert</option>
            </select>
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" placeholder="Password" asp-for="RegisterViewModel.Password" required>
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="RegisterViewModel.ConfirmPassword" required>
        </div>
        <button type="submit" class="btn btn-register" onclick="this.disabled=true; this.form.submit();">
            Register
        </button>   
        <p class="mt-3 login-link">Already have an account? <a asp-page="/User/Login">Login</a></p>
    </form>
    <p style="color: #ff3838">@Model.Message</p>
</div>
</body>
</html>
