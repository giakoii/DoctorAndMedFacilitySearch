@page
@model Application.Pages.User.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css"/>
    <style>
        body {
            background: linear-gradient(135deg, #afeaf6, #15B9D9FF);
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background: white;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .login-container h2 {
            margin-bottom: 20px;
            font-weight: 600;
            color: var(--bs-primary);
        }
        .form-control {
            border-radius: 30px;
            padding: 12px 20px;
            border: 1px solid var(--bs-primary);
        }
        .btn-login {
            background: var(--bs-primary);
            color: white;
            border-radius: 30px;
            padding: 12px;
            width: 100%;
            transition: 0.3s;
            font-weight: 500;
        }
        .btn-login:hover {
            background: #15B9D9FF;
        }
        .forgot-password a, .signup-link a {
            text-decoration: none;
            color: var(--bs-primary);
            font-weight: 500;
        }
        .forgot-password a:hover, .signup-link a:hover {
            text-decoration: underline;
        }
    </style></head>
<body>
<div class="login-container">
    <h2>Login</h2>
    <form method="post">
        <div class="mb-3">
            <input type="email" class="form-control" placeholder="Email" asp-for="email" required>
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" placeholder="Password" asp-for="password" required>
        </div>
        @if (Model.Message != null)
        {
            <div class="mb-3">
                <label asp-for="Message"></label>
            </div>
        }
        <div class="d-flex justify-content-between forgot-password mb-3">
            <div>
                <input type="checkbox" id="rememberMe"> <label for="rememberMe"> Remember me</label>
            </div>
            <div>
                <a asp-page="ForgotPassword">Forgot Password?</a>
            </div>
        </div>
        <button type="submit" class="btn btn-login">Login</button>
        <p class="mt-3 signup-link">Don't have an account? <a asp-page="Register">Sign up</a></p>
    </form>
</div><script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


<!-- Customized Bootstrap JavaScript -->
<!-- JavaScript Libraries -->
<script src="lib/wow/wow.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>
</body>
</html>