    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".add-doctor-btn").forEach(button => {
                button.addEventListener("click", function () {
                    let doctorId = this.getAttribute("data-doctor-id");
                    let facilityId = document.getElementById(`facility-${doctorId}`).value;

                    if (!facilityId) {
                        alert("Please select a facility.");
                        return;
                    }

                    // Gửi yêu cầu POST tới trang và phương thức handler
                    fetch("/Admin?handler=AssignDoctorToFacility", {
                        method: "POST",
                        headers: {"Content-Type": "application/json"},
                        body: JSON.stringify({doctorId: doctorId, facilityId: facilityId})
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert("Doctor assigned successfully!");
                                location.reload(); // Tải lại trang để thấy sự thay đổi
                            } else {
                                alert("Failed to assign doctor.");
                            }
                        })
                        .catch(error => console.error("Error:", error));
                });
            });
        });
