        @if (Model.DoctorsWithoutFacilities != null && Model.DoctorsWithoutFacilities.Count > 0)
        {
            <div class="table-responsive mt-4">
                <form method="post" asp-page-handler="AssignDoctorToFacility">
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Qualification</th>
                            <th>Specialty</th>
                            <th>Experience (Years)</th>
                            <th>Work Schedule</th>
                            <th>Select Facility</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var doctor in Model.DoctorsWithoutFacilities.Select((value, index) => new { value, index }))
                        {
                            <tr>
                                <td>@(doctor.index + 1)</td>
                                <td>@doctor.value.FullName</td>
                                <td>@doctor.value.Email</td>
                                <td>@doctor.value.Qualification</td>
                                <td>@doctor.value.Specialty</td>
                                <td>@doctor.value.ExperienceYears</td>
                                <td>@doctor.value.WorkSchedule ?? "Not Available"</td>
                                <td>
                                    <select name="facilityId" class="form-select facility-select">
                                        <option value="">-- Select Facility --</option>
                                        @foreach (var facility in Model.MedicalFacilities)
                                        {
                                            <option value="@facility.FacilityId">@facility.Name</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="hidden" name="doctorId" value="@doctor.value.DoctorId"/>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-3">
                No doctors found without a facility.
            </div>
        }

        <div class="container">
            <div class="page-inner">
                <div class="page-header">
                    <h2>MedicalFacilities Infomation</h2>
                </div>
            </div>
        </div>

        @if (Model.MedicalFacilities != null && Model.MedicalFacilities.Count > 0)
        {
            <div class="table-responsive mt-4">
                <form method="post" asp-page-handler="AssignDoctorToFacility">
                    <table class="table table-striped table-bordered text-center">
                        <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Facility Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Services</th>
                            <th>OpeningHours</th>
                            <th>Rating</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var medical in Model.MedicalFacilities.Select((value, index) => new { value, index }))
                        {
                            <tr>
                                <td>@(medical.index + 1)</td>
                                <td>@medical.value.Name</td>
                                <td>@medical.value.Address</td>
                                <td>@medical.value.Phone</td>
                                <td>@medical.value.Email</td>
                                <td>@medical.value.Services</td>
                                <td>@medical.value.OpeningHours</td>
                                <td>@medical.value.Rating</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-3">
                No doctors found without a facility.
            </div>
        }
