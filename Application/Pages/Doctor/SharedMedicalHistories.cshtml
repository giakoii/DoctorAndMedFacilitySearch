@page
@model Application.Pages.Doctor.SharedMedicalHistories
@{
    ViewData["Title"] = "Shared Medical Histories";
}

<div class="container mt-4">
    <h2>Medical Histories Shared With You</h2>

    @if (Model.SharedHistories == null || !Model.SharedHistories.Any())
    {
        <div class="alert alert-info">
            No medical histories have been shared with you yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var history in Model.SharedHistories)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@history.PatientName</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Email:</strong> @history.PatientEmail</p>
                                    <p><strong>Date of Birth:</strong> @history.DateOfBirth?.ToString("yyyy-MM-dd")</p>
                                    <p><strong>Blood Type:</strong> @history.BloodType</p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Gender:</strong> @(history.Gender == 1 ? "Male" : (history.Gender == 2 ? "Female" : "Other"))</p>
                                    <p><strong>Allergies:</strong> @history.Allergies</p>
                                </div>
                            </div>

                            <h6 class="mt-3">Medical History</h6>
                            <p>@history.MedicalHistory</p>

                            <h6 class="mt-3">Appointments</h6>
                            @if (history.Appointments.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Facility</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var appointment in history.Appointments)
                                            {
                                                <tr>
                                                    <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                                    <td>@appointment.FacilityName</td>
                                                    <td>@appointment.Status</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p>No appointment history available.</p>
                            }

                            <h6 class="mt-3">Medical Files</h6>
                            @if (history.MedicalFiles.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var file in history.MedicalFiles)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @file.FileName
                                            <a href="/User/Profile?handler=DownloadMedicalFile&fileId=@file.FileId"
                                               class="btn btn-sm btn-outline-primary">
                                                Download
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>No medical files available.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>